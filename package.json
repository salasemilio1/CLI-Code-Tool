{
  "name": "local-code-assistant",
  "version": "0.1.0",
  "description": "A helpful, open-source command line coding assistant that runs locally",
  "main": "dist/index.js",
  "bin": {
    "code-assistant": "dist/bin/cli.js",
    "ca": "dist/bin/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/bin/cli.ts",
    "start": "node dist/bin/cli.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "cli",
    "coding-assistant",
    "local",
    "open-source",
    "typescript",
    "development-tools"
  ],
  "author": "Emilio Salas",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "yaml": "^2.3.4",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/jest": "^29.5.11",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}